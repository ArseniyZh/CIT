<Window x:Class="WpfApp1.EditSubjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="EditSubjectWindow" Height="158" Width="800">
    <StackPanel Margin="10">
        <Label>Название предмета:</Label>
        <TextBox x:Name="txtSubjectName" Text="{Binding SubjectName, Mode=TwoWay}"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Сохранить" Margin="10,0" Click="Save_Click"/>
            <Button Content="Удалить" Margin="10,0" Click="Delete_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
