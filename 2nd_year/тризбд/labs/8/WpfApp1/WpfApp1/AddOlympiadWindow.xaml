<Window x:Class="WpfApp1.AddOlympiadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить олимпиаду" Height="300" Width="400">
    <StackPanel Margin="10">
        <Label>Название олимпиады:</Label>
        <TextBox x:Name="txtOlympiadName" />

        <Label>Дата олимпиады:</Label>
        <DatePicker x:Name="dpOlympiadDate" />

        <Label>Местоположение:</Label>
        <TextBox x:Name="txtLocation" />

        <Button Content="Добавить" Margin="5" Click="Add_Click"/>
    </StackPanel>
</Window>