<Window x:Class="Agency.Windows.RealEstatesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Agency.Windows"
        mc:Ignorable="d"
        Title="Объекты недвижимости" MinHeight="450" MinWidth="800" MaxHeight="550" MaxWidth="900" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Button x:Name="BackBtn" Click="BackBtn_Click" Style="{StaticResource BackBtn}"></Button>
        <Image  Height="45" Margin="10"  Grid.Column="0" Grid.Row="6" HorizontalAlignment="Left" Source="/Resources/logo (1).png"></Image>
        <Label Style="{StaticResource Title}" Content="Выберите необходимый пункт меню"></Label>
        <Button x:Name="AppartamnetsBtn" Click="AppartamnetsBtn_Click" Style="{StaticResource ActionBtn}" Content="Квартиры" Grid.Row="2"></Button>
        <Button x:Name="HousesBtn" Click="HousesBtn_Click" Style="{StaticResource ActionBtn}" Content="Дома" Grid.Row="1"></Button>
        <Button x:Name="LandBtn" Click="LandBtn_Click" Style="{StaticResource ActionBtn}" Content="Земли" Grid.Row="3"></Button>
        <Button x:Name="AddressesBtn" Click="AddressesBtn_Click" Style="{StaticResource ActionBtn}" Content="Адресы объектов" Grid.Row="4"></Button>
        <Button x:Name="DistrictBtn" Click="DistrictBtn_Click" Style="{StaticResource ActionBtn}" Content="Районы" Grid.Row="5"></Button>
    </Grid>
</Window>

