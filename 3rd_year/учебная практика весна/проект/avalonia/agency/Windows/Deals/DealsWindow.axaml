<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="agency.Windows.DealsWindow"
        Title="Сделки"
        Width="800" Height="600"
        WindowStartupLocation="CenterScreen">

  <StackPanel Margin="20" Spacing="10">
    <TextBlock Text="Список сделок" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

    <DataGrid x:Name="DealsDataGrid"
              AutoGenerateColumns="True"
              IsReadOnly="True"
              Height="400"/>

    <Button Content="Назад" Click="BackBtn_Click" Width="100" HorizontalAlignment="Left"/>
  </StackPanel>
</Window>