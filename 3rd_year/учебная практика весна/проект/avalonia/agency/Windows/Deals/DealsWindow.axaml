<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="agency.Windows.DealsWindow"
        Title="Управление сделками"
        Width="800" Height="600"
        MinWidth="800" MinHeight="550"
        MaxWidth="900" MaxHeight="650"
        WindowStartupLocation="CenterScreen">

  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <Button x:Name="BackBtn" Click="BackBtn_Click" Content="← Назад" Width="100" Grid.Row="0"/>

    <TextBlock Grid.Row="1" Text="Сделки" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10"/>

    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
      <TextBlock Text="Потребность:" VerticalAlignment="Center" Margin="0,0,10,0"/>
      <ComboBox x:Name="DemandComboBox" Width="400">
        <ComboBox.ItemTemplate>
            <DataTemplate>
            <TextBlock Text="{Binding DisplayInfo}" />
            </DataTemplate>
        </ComboBox.ItemTemplate>
        </ComboBox>
    </StackPanel>

    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,0">
      <TextBlock Text="Предложение:" VerticalAlignment="Center" Margin="0,0,10,0"/>
      <ComboBox x:Name="SupplyComboBox" Width="400">
        <ComboBox.ItemTemplate>
            <DataTemplate>
            <TextBlock Text="{Binding DisplayInfo}" />
            </DataTemplate>
        </ComboBox.ItemTemplate>
        </ComboBox>
    </StackPanel>

    <StackPanel Grid.Row="4">
      <Button x:Name="CreateDealBtn" Content="Создать сделку" Width="150" Height="30" HorizontalAlignment="Left" Click="CreateDeal_Click" Margin="0,10,0,10"/>
      <TextBlock Text="Существующие сделки" FontWeight="Bold" Margin="0,0,0,5"/>
      <ListBox x:Name="DealsListBox" Height="200"/>
    </StackPanel>
  </Grid>
</Window>