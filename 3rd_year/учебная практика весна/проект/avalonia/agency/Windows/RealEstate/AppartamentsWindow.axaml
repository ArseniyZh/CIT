<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="agency.Windows.AppartamentsWindow"
        Title="Квартиры"
        Width="800" Height="600"
        WindowStartupLocation="CenterScreen">

  <StackPanel Margin="30" Spacing="10">
    <TextBlock Text="Список квартир" FontSize="24" FontWeight="Bold"/>

    <DataGrid x:Name="AppartamentsDataGrid"
              Height="400"
              AutoGenerateColumns="True"
              IsReadOnly="True"/>

    <Button Content="Назад" Click="BackBtn_Click" Width="100" HorizontalAlignment="Left"/>
  </StackPanel>
</Window>
