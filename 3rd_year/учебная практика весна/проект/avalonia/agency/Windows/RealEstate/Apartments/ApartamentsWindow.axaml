<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="agency.Windows.ApartamentsWindow"
        Title="Квартиры"
        Width="800" Height="600"
        MinWidth="800" MinHeight="550"
        MaxWidth="900" MaxHeight="650"
        WindowStartupLocation="CenterScreen"
        Background="#f0f6fc">

  <Grid Margin="20">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Верхняя панель -->
    <Grid Grid.Row="0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>

      <Button Content="← Назад" Click="BackBtn_Click" Grid.Column="0" Width="100" Margin="0,0,10,0"/>
      <TextBlock Text="Квартиры" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Grid.Column="1" Margin="0,0,0,10"/>
    </Grid>

    <!-- Список квартир -->
    <ScrollViewer Grid.Row="1">
      <StackPanel x:Name="AppartamentsListPanel" Spacing="8" />
    </ScrollViewer>

    <!-- Нижняя панель -->
    <Grid Grid.Row="2">
      <Image Source="avares://agency/Resources/logo.png"
             Height="45"
             HorizontalAlignment="Left"
             Margin="0,10,0,0" />
    </Grid>
  </Grid>
</Window>
