<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="agency.Windows.EditAgentWindow"
        Title="Редактировать агента"
        Width="400" Height="300"
        WindowStartupLocation="CenterOwner">

  <StackPanel Margin="20" Spacing="10">
    <TextBlock Text="Редактирование агента" FontSize="20" FontWeight="Bold"/>

    <TextBox x:Name="NameBox" Watermark="ФИО"/>
    <TextBox x:Name="PhoneBox" Watermark="Телефон"/>

    <Button Content="Сохранить" Click="SaveBtn_Click" Width="100"/>
  </StackPanel>
</Window>
