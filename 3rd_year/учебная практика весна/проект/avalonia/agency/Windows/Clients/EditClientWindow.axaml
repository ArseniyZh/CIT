<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="agency.Windows.EditClientWindow"
        Title="Редактировать клиента"
        Width="400" Height="450"
        WindowStartupLocation="CenterOwner">

  <StackPanel Margin="20" Spacing="10">
    <TextBlock Text="Редактирование клиента" FontSize="20" FontWeight="Bold"/>

    <TextBox x:Name="LastNameBox" Watermark="Фамилия"/>
    <TextBox x:Name="FirstNameBox" Watermark="Имя"/>
    <TextBox x:Name="MiddleNameBox" Watermark="Отчество"/>
    <TextBox x:Name="PasswordBox" Watermark="Пароль"/>
    <TextBox x:Name="PhoneBox" Watermark="Телефон"/>
    <TextBox x:Name="EmailBox" Watermark="Почта"/>

    <StackPanel Orientation="Horizontal" Spacing="10">
      <Button Content="Сохранить" Click="SaveBtn_Click" Width="100"/>
    </StackPanel>
  </StackPanel>
</Window>
